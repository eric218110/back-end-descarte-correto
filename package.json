{
  "name": "node-api",
  "version": "2.5.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build:production": "node production.js",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "MODE=production node dist/main/server/index.js",
    "start:dev": "MODE=development DATABASE=api_node ts-node-dev -r tsconfig-paths/register --respawn --ignore-watch node_modules --no-notify src/main/server/index.ts",
    "pretest": "rimraf __test__",
    "test": "MODE=test DATABASE=test_api_node jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:unit:verbose": "MODE=test jest --watch -c jest-unit-config.js --runInBand --detectOpenHandles",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:integration:verbose": "MODE=test jest --watch -c jest-integration-config.js --runInBand --detectOpenHandles",
    "test:staged": "npm test -- --findRelatedTests",
    "pretest:ci": "rimraf coverage",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "COVERALLS_REPO_TOKEN=dPnetxO4JWOEEx7R9YJ2RX0RF5takHWbm npm run test:ci && coveralls < coverage/lcov.info"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/aws-sdk": "^2.7.0",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.0.27",
    "@types/rimraf": "^3.0.0",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "3",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "coveralls": "^3.1.0",
    "eslint": "7",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "11",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "4",
    "eslint-plugin-standard": "4",
    "git-commit-msg-linter": "^2.4.4",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-module-name-mapper": "^0.1.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-node-dev": "^1.0.0-pre.56",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "aws-sdk": "^2.739.0",
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25",
    "validator": "^13.1.1"
  }
}
