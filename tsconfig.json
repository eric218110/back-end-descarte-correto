{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@data/*": ["./data/*"],
      "@domain/*": ["./domain/*"],
      "@infra/*": ["./infra/*"],
      "@main/*": ["./main/*"],
      "@presentation/*": ["./presentation/*"],
      "@validation/*": ["./validation/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": []
}